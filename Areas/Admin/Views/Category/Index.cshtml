@{
    ViewData["Title"] = "Admin category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model List<TestWebAPI.DTOs.Category.GetCategoryDTO>

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Quản lý danh mục
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i>Trang chủ</a></li>
            <li><a href="#">Quản lý danh mục</a></li>
        </ol>
    </section>
    <section class="content container-fluid">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive no-padding">
                    <table class="table-hover table" id='table_panigation'>
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Hình Ảnh</th>
                                <th scope="col">Tên</th>
                                <th scope="col">Mô tả</th>
                                <th scope="col">Quản Lý</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr id="@category.id">
                                    <th scope="row"></th>
                                    <td>
                                        <img style="margin-top: 1rem; height: 5rem;"
                                             src="@category.avatar" alt="avatar">
                                    </td>
                                    <td>
                                        @category.title
                                    </td>
                                    <td>
                                        @category.description
                                    </td>
                                    <td class="row-cols-3" style="line-height: 2.5" >
                                        <a asp-controller="Category" asp-action="Edit" asp-route-Id="@category.id" class="btn btn-warning btn-sm">Sửa</a>
                                        <form asp-action="Delete" method="post" asp-route-Id="@category.id">
                                            <input type="submit" value="Xóa" class="btn btn-danger btn-sm" />
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

